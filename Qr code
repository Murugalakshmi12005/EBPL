# filename: make_qr.py
# pip install qrcode[pil]
import qrcode
from qrcode.constants import ERROR_CORRECT_M

data = "https://example.com"  # <- put your text or URL here

qr = qrcode.QRCode(
    version=None,               # auto size
    error_correction=ERROR_CORRECT_M,  # ~15% error correction
    box_size=10,                # pixel size of each "box"
    border=4,                   # quiet zone (boxes)
)
qr.add_data(data)
qr.make(fit=True)

img = qr.make_image(fill_color="black", back_color="white")
img.save("qrcode.png")
print("Saved qrcode.png")